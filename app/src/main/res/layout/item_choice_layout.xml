<?xml version="1.0" encoding="utf-8"?>
<rxjava.xq.com.pdemo.view.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="哈哈哈哈" />

    <CheckBox
        android:id="@+id/cb_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:focusable="false"
        android:clickable="false"
        android:layout_alignParentRight="true"
        android:button="@drawable/choice_selector" />
</rxjava.xq.com.pdemo.view.CheckableLinearLayout>